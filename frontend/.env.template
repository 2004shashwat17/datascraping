# Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_API_VERSION=v1

# Application Configuration
REACT_APP_NAME="OSINT Platform"
REACT_APP_VERSION="1.0.0"
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true

# Social Media Integration
REACT_APP_ENABLE_TWITTER=true
REACT_APP_ENABLE_FACEBOOK=true
REACT_APP_ENABLE_INSTAGRAM=true

# UI Configuration
REACT_APP_THEME_MODE=dark
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ENABLE_DEBUG=true

# Refresh Intervals (in seconds)
REACT_APP_DASHBOARD_REFRESH_INTERVAL=30
REACT_APP_THREATS_REFRESH_INTERVAL=15
REACT_APP_POSTS_REFRESH_INTERVAL=60

# Charts and Visualization
REACT_APP_CHART_ANIMATION=true
REACT_APP_MAX_CHART_DATA_POINTS=100

# Authentication (when implemented)
REACT_APP_AUTH_ENABLED=false
REACT_APP_SESSION_TIMEOUT=3600